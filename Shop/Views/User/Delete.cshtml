@{
    ViewData["Title"] = "Delete User";
}
@inject CurrentUserProvider _currentUserProvider
@model Shop.Models.ShopUser


<div>
    <h3>Вы действительно хотите удалить пользователя?</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">@Model.UserName</dd>

        <dt class = "col-sm-2">Roles</dt>
        <dd class = "col-sm-10">
            @await _currentUserProvider.GetUserRoles(Model)
        </dd>

        <dt class = "col-sm-2">Full name</dt>
        <dd class = "col-sm-10">@Model.FullName</dd>

        <dt class = "col-sm-2">Email</dt>
        <dd class = "col-sm-10">@Model.Email</dd>

        <dt class = "col-sm-2">Address delivery</dt>
        <dd class = "col-sm-10">@Model.AddressDelivery</dd>
    </dl>
    
    <form method="POST" asp-action="DeletePost">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary">К списку пользователей</a>
        </div>
    </form>
</div>
