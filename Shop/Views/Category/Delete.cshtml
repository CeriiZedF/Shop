@{
    ViewData["Title"] = "Delete category";
}

@model Shop.Models.Category

<h1>Удаление категории</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="POSt" asp-action="DeletePost" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" disabled/>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Удалить" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-info">К списку категорий</a>
            </div>
        </form>
    </div>
</div>
