@model Shop.Helpers.Pager

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-numPage="1">Первая</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-numPage="@(Model.CurrentPage - 1)">Назад</a>
                </li>
            }

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-numPage="@pge">@pge</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-numPage="@(Model.CurrentPage + 1)">Вперед</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-numPage="@(Model.TotalPages)">Последняя</a>
                </li>
            }
        </ul>
    }
</div>