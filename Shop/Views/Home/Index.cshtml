@model Shop.Models.ViewModels.HomeVM

@{
    ViewData["Title"] = "Каталог продуктов";
}

<div class="text-center">
    <h1 class="display-4 mb-2">Welcome to the shop</h1>
    <br />
</div>

<div class="row btn-group" role="group">
    <div class="col-12 mb-3">
        <a asp-controller="Home" asp-action="ChoiceCategory" asp-route-id="" class="btn btn-primary">Все товары</a>
        @foreach (var cat in Model.Catergories)
        {
            <a asp-controller="Home" asp-action="ChoiceCategory" asp-route-id="@cat.Id" class="btn btn-primary">@cat.Name</a>
        }
    </div>
</div>

<div class="row">
    @if (Model is not null)
    {
        @foreach (var prod in Model.Products)
        {
            <div class="col-lg-4 col-md-6 col-sm-6 mb-3">
                <div class="card h-100" style="width: 18rem;">
                    <img src="@WC.ImagePath@prod.Image" class="card-img-top" style="height: 175px; object-fit: cover;" alt="image">
                    <div class="card-body">
                        <h5 class="card-title">@prod.Name</h5>
                        <p class="card-text">@prod.ShortDesc</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <span>Category: </span>
                            <span>@prod.Category.Name</span>
                        </li>
                        <li class="list-group-item">
                            <span>Usage: </span>
                            <span>@prod.ProductUsage.Name</span>
                        </li>
                    </ul>
                    <div class="card-body">
                        <a asp-action="Details" asp-route-id="@prod.Id" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h2>Empty</h2>
    }
</div>
